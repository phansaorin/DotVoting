<!DOCTYPE html>
<html>
<head>
  <title>DotVoting</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="header">
		<div class="row">
		    <div class="span12">
		    	<%if user_signed_in?%>
					<p><span style="color:#fff;">Welcome</span> <%= current_user.email %></p>
					<%= link_to "Settings", edit_user_registration_path%> |
					<%= link_to "Log out", destroy_user_session_path, method: :delete%> 
				<%end%>
		    </div>
	    </div>
	    <br>
	    <div class="navbar">
			<div class="navbar-inner">
				
				<ul class="nav">
					<li class="<%= 'active' if params[:controller] == 'users_controller' %>">
						<%= link_to "Home", users_path %>
					</li>
					<li class="<%= 'active' if params[:controller] == 'rounds_controller' %>">
						<%= link_to "Round", rounds_path %> 
					</li>       
				</ul>
			</div>
		</div>
	</div>

<% if notice %>
  <p class="alert alert-notice"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-error"><%= alert %></p>
<% end %>


<%= yield %>

</body>
</html>
