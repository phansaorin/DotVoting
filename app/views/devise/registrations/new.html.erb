

<div class="form_user">
 <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :role => "form" }) do |f| %>
  <%= devise_error_messages! %>
  <h2>Sign Up</h2>

    <table class="registerform">
          <tr>
            <td><%= f.label :email, :class => "span3" %></td>
            <td><%= f.email_field :email, autofocus: true, :placeholder => "Email address", required: true %></td>
          </tr>

          <tr>
            <td><%= f.label :password %></td>
            <td> <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", required: true %></td>
          </tr>

          <tr>
            <td><%= f.label :password_confirmation %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm Password", required: true  %></td>
          </tr>
          <tr>
            <td></td>
            <td>
                <input type="checkbox">Remember me
           
               <%= f.submit "Sign up", :class => "btn btn-primary" %>
          </td>
          </tr>
          <tr>
            <td></td>
            <td><%= render "devise/shared/links" %></td>
          </tr>
          
    </table>     
       
  
         
    <% end %>

  </div>

    
