

<div class="form_user">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :role => "form" }) do |f| %>
  <h2 class="form-signin-heading">Sign in</h2>

    <table class="registerform">
       <tr>
            <td><%= f.label :email, :class => "span3" %></td>
            <td><%= f.email_field :email, autofocus: true, :placeholder => "Email address", required: true %></td>
        </tr>
        <tr>
            <td><%= f.label :password, :class => "span3" %></td>
            <td> <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", required: true %></td>
       </tr>
        <tr>
            <td>
                  <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me %><%= f.label :remember_me, :class => "checkbox" %>
                  <% end -%>
            </td>
            <td>
                 
                  <%= f.submit "Sign in", :class => "btn btn-primary" %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= render "devise/shared/links" %></td>
        </tr>
    

     </table>  

  <% end %>

</div>