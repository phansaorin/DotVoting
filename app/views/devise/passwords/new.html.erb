<div class="container">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form-signin", :role => "form" }) do |f| %>
  <%= devise_error_messages! %>

  <h2>Forgot your password?</h2>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email address", required: true %></div>

  <div><%= f.submit "Send me reset password instructions", :class => "btn btn-lg btn-primary btn-block" %></div>

  <%= render "devise/shared/links" %>

<% end %>

</div>
