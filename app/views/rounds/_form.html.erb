  <table class="tbl-user">
    <tr>
      <td><%= f.label :question %></td>
      <td>:</td>
      <td><%= f.text_area :question, :placeholder => 'Enter Question' %></td>
    </tr>
    <tr>
      <td><%= f.label "Suggestion" %></td>
      <td>:</td>
     <td><%= f.text_field "suggestion", :id => "suggestion", :value => "", class: "form-control" %>
      <%= link_to "Add".html_safe, "#", id: "add_answer", class: "add_answer" %>
      <div id="div_answer"></div>
