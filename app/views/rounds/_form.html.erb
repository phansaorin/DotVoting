      <!-- check_box_tag 'eula', 'accepted', false, disabled: true -->
      </br>
        <%= check_box_tag "answers[]", 'basket_ball' %> Basketball</br>
        <%= check_box_tag "answers[]", 'ball' %> ball</br></br>

<!-- session[:continent] ||= {}
session[:continent][:filter] = params[:filter] -->

      </ul>
     </td>
    </tr>
    <tr>
      <td><%= f.label :dealine %></td>
      <td>:</td>
     <td><%= f.text_field :deadline, :id => "datepicker", :value => Date.today, class: "form-control" %></td>
    </tr>
    <tr>
    <tr>
      <td colspan="3">
        <%= f.submit "Submit", class: "btn btn-info" %>
        <%= link_to '<input value="Back" type="button" class="btn btn-info" />'.html_safe, rounds_path %>
      </td>
    </tr>
  </table>
  <script>
$('#datepicker').datepicker({format: 'yyyy-mm-dd'});
</script>
  <% end %>


