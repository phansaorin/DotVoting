<div id="wrapper">
	<div class="container-fluid">
        <div class="row-fluid">
          	<div class="span2">
          		<h3>Action</h3>
                <ul class="nav nav-tabs nav-stacked">
                	<% if current_user.admin? %>
					<li class="active"><%= link_to "Round",rounds_path%></li>
					<% end %>
					<li class="#"><%= link_to 'Suggestion',suggestions_path %></li>
					<li class="#"><%= link_to 'Vote',votes_path %></li>
			    </ul>
          	</div>
          	<div class="span10">
          		<h3>Round Phase</h3>
          		<p>
          			<%= link_to '<button type="button" class="btn btn-info">Add New</button>'.html_safe, new_round_path %>
          		</p>
      		    <table class="table table-bordered">
      		    	<tr class="success">
						<th>No</th>
						<th>Round</th>
						<th>Deadline</th>
						<th>Action</th>
					</tr>

				<%	@count_round_id = 0 %>

				<% @rounds.each do |round| %>
				<% leave_day = (round.deadline - Date.today).to_i %>
			    	<tr>
						<td><%= @count_round_id = @count_round_id + 1 %></td>
						<td><%= round.question %></td>
	    				<% if leave_day > 0 %>
	    					<td><span class="leave_deadline">(Leave: <%= leave_day %> day(s) )</span></td>
	    				<% elsif leave_day <= 0 %>
	    					<td>
	    						<span class="view_completed_round">(Closed)</span>
	    					</td>
	    				<% end %>

						<td>
							<% if leave_day > 0 %>
								<span>
									<%= link_to image_tag("edit.png", :alt => "Edit", :title => "Edit"), edit_round_path(round) %>
								</span> 
								&nbsp;
								<span>
									<%= link_to image_tag("delete.png", :alt => "Delete", :title => "Delete"), round_path(round), method: :delete, data: {confirm: "Are you sure want to delete this record?"} %> 
								</span>	
							<% elsif leave_day <= 0 %>
								<span><%= link_to '<button class="btn btn-success">Start Suggestion Phase</button>'.html_safe, status_round_path(round, :status => "suggestion"), method: :post %></span>
							<% end %>
						</td>
					</tr>
				<% end %>
			    </table>
          	</div>
        </div>
    </div>
