<div id="navbar-inner" class="navbar-inner header">
<span class="span-leave">ROUND MENAGEMNET</span>
</div>
<br>
<br>
<br>		
<div id="wrapper">
	<div class="container-fluid">
        <div class="row-fluid">
          	<div class="span2">
          		<h3>Action</h3>
                <ul class="nav nav-tabs nav-stacked">
			    	<li><a href="#">Management</a></li>
					<li><a href="#">User</a></li>
					<li class="active"><a href="#">Question</a></li>
			    </ul>
          	</div>
          	<div class="span10">
          		<h3>Question Management</h3>
          		<div class="span8">
      			    <ul class="breadcrumb">
					    <li><a href="#">Home</a> <span class="divider">/</span></li>
					    <li class="active">Question</li>
					</ul>
          		</div>
          		<div class="span2">
          			<%= link_to '<button type="button" class="btn btn-info">Add New</button>'.html_safe, new_round_path %>
          		</div>
          		    <table class="table table-bordered">
          		    	<tr class="success">
							<th>No</th>
							<th>Question</th>
							<th>Deadline</th>
							<th>Amount Answer</th>
							<th>Suggestion</th>
							<th>Action</th>
							<th>Status</th>
						</tr>
					<% @rounds.each do |round| %>
				    	<tr>
							<td><%= round.id %></td>
							<td><%= round.question %></td>
							<td><%= round.deadline %></td>
							<td>6</td>
							<td><%= round.suggestion %></td>
							<td>
								<span><%= link_to '<button class="btn btn-success">Edit</button>'.html_safe, edit_round_path(round) %></span>
								<span>View</span> |
								<span>Delete</span>
							</td>
							<td></td>
						</tr>
					<% end %>
				    </table>
          	</div>
        </div>
    </div>
