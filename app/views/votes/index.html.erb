<div id="wrapper">
	<div class="container-fluid">
        <div class="row-fluid">
          	<div class="span2">
          		<h3>Action</h3>
                <ul class="nav nav-tabs nav-stacked">
			    	<!-- <li><a href="#">Management</a></li> -->
					<!-- <li><%= link_to 'User',users_path %></li> -->
					<li class="active"><%= link_to "Round",rounds_path%></li>
					<li class="#"><%= link_to 'Suggestion',suggestions_path %></li>
					<li class="#"><%= link_to 'Vote',votes_path %></li>
			    </ul>
          	</div>
          	<div class="span10">
          		<h3>Vote Management</h3>
      		    <table class="table table-bordered">
      		    	<tr class="success">
						<th>No</th>
						<th>Round Question</th>
						<th>Deadline</th>
					</tr>
					<% roundId = 0 %>
					<% @arr_suggestions.each do |round| %>
					<% roundId = roundId + 1 %>
		    		<tr>
		    			<td><%= roundId %></td>
		    			<td><%= link_to (round[:suggestion].question), vote_path(round[:suggestion]) %></td>

	    				<% leave_day = (round[:suggestion].deadline - Date.today).to_i %>
	    				<% if leave_day > 0 %>
	    					<td>
	    						<span class="leave_deadline">(Leave: <%= leave_day %> day(s) )</span>
	    					</td>
	    				<% elsif leave_day < 0 %>
	    					<td>
	    						<span class="view_completed_round">
	    							<%= link_to "(View Completed Round)", view_completed_vote_path(round[:suggestion]) %>
	    						</span>
	    					</td>
	    				<% else %>
	    					<td>
	    						<span class="argent_deadline">(Today is deadline)</span>
	    					</td>
	    				<% end %>
		    		</tr>
	    		<% end %>
			    </table>
          	</div>
        </div>
    </div>