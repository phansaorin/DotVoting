<div id="wrapper">
	<div id='home-head'>
		<h1>User Management</h1>
	</div>
	<div class="navbar">
		<div class="navbar-inner">			
			<ul class="nav">
				<li class="<%= 'active' if params[:controller] == 'users_controller' %>">
					<%= link_to "Home", users_path %>
				</li>
				<li class="<%= 'active' if params[:controller] == 'rounds_controller' %>">
					<%= link_to "Round", rounds_path %> 
				</li>  
				<li class="<%= 'active' if params[:controller] == 'rounds_controller' %>">
					<%= link_to "Vote", votes_path %> 
				</li>     
			</ul>
		</div>
	</div>	
	<p>
		<%= link_to '<button type="button" class="btn btn-info">Add New</button>'.html_safe %>
	</p>
	<div id="form-user">
		<!-- <table id="user-info" border='1' cellpadding="0" cellspacing="0"> -->
		<table class="table table-hover">
			<tr style="background: #F5F5F5;">
				<th>Email</th>
				<th>Action</th>
			</tr>
		<% @users.each do |user| %> 
			<tr>
				<td><%= user.email %></td>
				<td colspan="2">
					<span><%= link_to '<button class="btn btn-success">Edit</button>'.html_safe %></span>

					<!-- add and view profile -->

					
						<span><%= link_to '<button class="btn btn-success">Add Profile</button>'.html_safe %></span>

					<span><%= link_to '<button class="btn btn-danger">Delete</button>'.html_safe, method: :delete, data: {confirm: "Are you sure want to delete this record?"} %></span>
				</td>
			</tr>
		<% end %>
			
		</table>
	</div>
</div><!-- end wrapper -->